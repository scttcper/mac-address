{
  "name": "@ctrl/mac-address",
  "version": "0.0.0-placeholder",
  "description": "Parse and manipulate MAC addresses",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/mac-address",
  "type": "module",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "keywords": [
    "mac",
    "address",
    "getMac"
  ],
  "scripts": {
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prepare": "npm run build",
    "build": "tsc",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:ci": "c8 --reporter=text --reporter=lcov ava"
  },
  "devDependencies": {
    "@ctrl/eslint-config": "3.3.1",
    "@sindresorhus/tsconfig": "2.0.0",
    "@types/node": "17.0.9",
    "ava": "4.0.1",
    "c8": "7.11.0",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  },
  "ava": {
    "files": [
      "test/**/*.spec.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "release": {
    "branch": "master"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.16"
  }
}
